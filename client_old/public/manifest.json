{
  "name": "Fooda+",
  "description": "A Chrome extension to leave reviews on Fooda",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Use Fooda+ to access Fooda reviews"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.fooda.com/*"],
      "js": ["./static/js/content.js"]
    },
    {
      "matches": ["https://app.fooda.com/*/items"],
      "js": ["./static/js/content.js"]
    }
  ]
}